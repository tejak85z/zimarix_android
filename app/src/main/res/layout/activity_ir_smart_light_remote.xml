<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ir_remotes.Ir_Smart_Light_Remote">
    <ProgressBar
        android:id="@+id/liprogressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:id="@+id/li_on_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <Button
            android:id="@+id/li_on"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="ON"
            android:max="100"
            android:layout_marginTop="6dp"/>
        <Button
            android:id="@+id/li_off"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="OFF"
            android:max="100"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_below="@id/li_on_off">

        <Button
            android:id="@+id/li_blue"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:max="100"
            android:text="blue"
            app:backgroundTint="#0000FF" />

        <Button
            android:id="@+id/li_green"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="green"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:max="100"
            app:backgroundTint="#008000" />

        <Button
            android:id="@+id/li_orange"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="orange"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:max="100"
            app:backgroundTint="#FFA500" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_color_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_below="@id/li_color_1">

        <Button
            android:id="@+id/li_purple"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="purple"
            android:layout_marginTop="2dp"
            android:max="100"
            app:backgroundTint="#9C27B0" />

        <Button
            android:id="@+id/li_red"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="red"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:max="100"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/li_skyblue"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="blue"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:max="100"
            app:backgroundTint="#00BCD4" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_below="@id/li_color_2">

        <Button
            android:id="@+id/li_white"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="white"
            android:layout_marginTop="2dp"
            android:max="100"
            app:backgroundTint="#3CFFFFFF" />
        <Button
            android:id="@+id/li_violet"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:max="100"
            android:text="violet"
            app:backgroundTint="#8F00FF" />
        <Button
            android:id="@+id/li_yellow"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="yellow"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:max="100"
            app:backgroundTint="#FFEB3B" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_color_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_below="@id/li_color_3">
        <Button
            android:id="@+id/li_pink"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="pink"
            android:layout_marginTop="2dp"
            android:max="100"
            app:backgroundTint="#FFC0CB" />
    </LinearLayout>
    <TextView
        android:id="@+id/li_brightnesstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li_color_4"
        android:layout_marginLeft="90dp"
        android:max="100"
        android:text="BRIGHTNESS"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/li_brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/li_brightnesstext">
        <Button
            android:id="@+id/li_brightnessup"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="+"
            android:max="100"
            android:layout_marginTop="6dp"/>
        <Button
            android:id="@+id/li_brightnessdown"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="-"
            android:max="100"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </LinearLayout>


</RelativeLayout>