<!-- item_device_config.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/alexa_wakeword_enable"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#3498db"
            android:text="ALEXA WAKE WORD ENABLE"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:text="ALEXA SENSITIVITY"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/alexa_sensitivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="100"
            android:layout_marginTop="1dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/jarvis_wakeword_enable"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#3498db"
            android:text="JARVIS WAKE WORD ENABLE"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:text="JARVIS SENSITIVITY"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <SeekBar
            android:id="@+id/jarvis_sensitivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="100"
            android:layout_marginTop="1dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/jarvis_device"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#3498db"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/jarvis_cmd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#3498db"
            android:textColor="#ffffff" />
    </LinearLayout>
    <Button
        android:id="@+id/update_wakeword"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="UPDATE"
        android:layout_weight="1"
        android:backgroundTint="#3498db"
        android:textColor="#ffffff" />
</LinearLayout>