<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.wifi">

    <ProgressBar
        android:id="@+id/wifi_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/wifititle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:max="100"
        android:layout_marginLeft="80dp"
        android:text="WIFI CONFIG"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wifi_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@id/wifititle"/>

    <TextView
        android:id="@+id/wifi_scan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:max="100"
        android:layout_marginLeft="80dp"
        android:text="WIFI SCAN RESULTS"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/wifi_recyclerView"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wifi_scan_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_below="@id/wifi_scan_title"/>
</RelativeLayout>